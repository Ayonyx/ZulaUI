<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- $Change: 67111 $ (must be within the first 200 characters of the file) -->
<View view_layout="horizontal" view_flags="WID_HANDLE_MOUSE" min_size_extend="Point(-1,15)">
  <View name="HoverInfoArea" view_flags="WID_AUTO_HIGHLIGHT" view_layout="vertical" h_alignment="LEFT" layout_borders="Rect(0,0,10,0)">
    <View view_flags="WID_AUTO_HIGHLIGHT" view_layout="stacked" h_alignment="LEFT">
      <BitmapView name="ClassNameBackground" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_bg_name.tga">
        <nocreate:Bitmap name="PortraitGUI/group_gui/team_portrait_big_bg_name_highlight.tga" />
      </BitmapView>
      <View view_layout="horizontal">
        <TeamMemberClassView  name           = "ClassIconView"
                              max_size_limit = "Point(12,12)"
                              layout_borders = "Rect(6,5,4,0)"
        />
        <TextView name            = "NameView"
                  font            = "SMALL"
                  min_size_extend = "Point(95,-1)"
                  max_size_limit  = "Point(95,COORD_MAX)"
                  layout_borders  = "Rect(0,3,0,0)"
                  feature_flags   = "TVF_ENABLE_ELLIPSIS"
        />
      </View>
    </View>
    <View name="Health" view_layout="stacked" h_alignment="LEFT" v_alignment="TOP">
      <BitmapView name="HealthBarBackground" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_bg_health.tga">
        <nocreate:Bitmap name="PortraitGUI/group_gui/team_portrait_big_bg_health_highlight.tga" />
      </BitmapView>
      <CharStatBar  name            = "HealthBar"
                    layout_borders  = "Rect(0,0,0,0)"
                    stat_type       = "health"
                    orientation     = "right"
                    flash_on_reduce = "false"
                    fg_gfx          = "PortraitGUI/group_gui/team_portrait_big_health.tga"
                    label_color     = "white"
                    label_font      = "SMALL"
                    label_offset    = "Point(-5,1)"
		  />
      <BitmapView name="OutOfRangeOverlay" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_health_outofrange.tga"/>
      <TextView name              = "DeadOverlay"
                view_flags        = "WID_DONT_INHERIT_ALPHA"
                font              = "SMALL"
                value_token       = "TeamMemberDead"
                layout_borders    = "Rect(0,0,0,0)"
                h_local_alignment = "CENTER"
      />
    </View>
    <View name="ManaStamina"  view_layout="stacked" h_alignment="LEFT" v_alignment="TOP" view_flags="WID_IGNORE_WHEN_HIDDEN" >
      <BitmapView name="StaminaBarBackground" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_bg_stamina_big.tga">
        <nocreate:Bitmap name="PortraitGUI/group_gui/team_portrait_big_bg_stamina_big_highlight.tga" />
      </BitmapView>
      <View  view_layout="vertical" h_alignment="LEFT" v_alignment="TOP">
        <CharStatBar  name            = "ManaBar"
                      stat_type       = "mana"
                      orientation     = "right"
                      flash_on_reduce = "false"
                      fg_gfx          = "PortraitGUI/group_gui/team_portrait_big_mana.tga"
                      label_color     = "white"
                      label_font      = "SMALL"
		    />
        <CharStatBar  name            = "StaminaBar"
                      stat_type       = "stamina"
                      orientation     = "right"
                      flash_on_reduce = "false"
                      fg_gfx          = "PortraitGUI/group_gui/team_portrait_big_stamina.tga"
                      label_color     = "white"
                      label_font      = "SMALL"
		    />
      </View>
      <CharStatBar  name            = "BigStaminaBar"
                    stat_type       = "stamina"
                    orientation     = "right"
                    flash_on_reduce = "false"
                    fg_gfx          = "PortraitGUI/group_gui/team_portrait_big_stamina_big.tga"
                    label_color     = "white"
                    label_font      = "SMALL"
                    label_offset    = "Point(-5,1)"
		  />
      <BitmapView name="StaminaOutOfRangeOverlay" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_stamina_outofrange.tga"/>
    </View>
    <BitmapView name="BackgroundBottom" bitmap_gfx="PortraitGUI/group_gui/team_portrait_big_bg_bottom.tga">
        <nocreate:Bitmap name="PortraitGUI/group_gui/team_portrait_big_bg_bottom_highlight.tga" />
    </BitmapView>
  </View>
  <BuffListView name              = "BuffListView"
                v_local_alignment = "TOP"
                layout_borders    = "Rect(2,16,0,0)"
                icon_size         = "Point(15,15)"
                icon_spacing      = "Point(2,2)"
                max_columns       = "200"
                filter            = "hostile"
  />
</View>
